{
    "name": "ButterKnife",
    "short_name": "ButterKnife",
    "version": "1.0.0",
    "description": "__MSG_extension-description__",
    "default_locale": "en",
    "homepage_url": "https://github.com/akash07k/ButterKnife",
    "manifest_version": 3,
    "minimum_chrome_version": "100",
    "browser_specific_settings": {
        "gecko": {
            "id": "butterknife.techromantica.com",
            "strict_min_version": "100.0"
        }
    },
    "icons": {
        "128": "icons/128.png"
    },
    "browser_action": {
        "default_title": "ButterKnife",
        "default_popup": "options/pages/options.html",
        "default_icon": {
            "128": "icons/128.png"
        }
    },
    "options_ui": {
        "browser_style": true,
        "open_in_tab": true,
        "page": "options/pages/options.html"
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "js": ["scripts/content/GitHub.js"],
            "run_at": "document_end"
        }
    ],

    "background": {
        "service_worker": "scripts/background/background.js",
        "type": "module"
    },
    "permissions": ["storage"],
    "host_permissions": ["https://github.com/*"]
}

