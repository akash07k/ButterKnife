{
    "name": "ButterKnife",
    "short_name": "ButterKnife",
    "version": "1.0.0",
    "description": "__MSG_extensionDescription__",
    "author": "Akash Kakkar",
    "developer": {
        "name": "Akash Kakkar",
        "url": "https://github.com/akash07k/ButterKnife"
    },
    "default_locale": "en",
    "homepage_url": "https://github.com/akash07k/ButterKnife",
    "manifest_version": 3,
    "minimum_chrome_version": "100",
    "browser_specific_settings": {
        "gecko": {
            "id": "butterknife@techromantica.com",
            "strict_min_version": "101.0"
        }
    },
    "icons": {
        "128": "icons/128.png"
    },
    "options_ui": {
        "browser_style": true,
        "open_in_tab": true,
        "page": "options/pages/options.html"
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "js": ["scripts/content/GitHub.js"],
            "run_at": "document_end"
        }
    ],

    "background": {
        "service_worker": "scripts/background/background.js",
        "type": "module"
    },
    "permissions": ["storage"],
    "host_permissions": ["https://github.com/*"]
}

